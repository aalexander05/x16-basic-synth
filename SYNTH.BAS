    IF KEY$ = "L" THEN FMPLAY 1, "O" + RIGHT$(STR$(OCTAVE%+1), LEN(STR$(OCTAVE%+1))-1) + "D" : GOTO GETKEY
    IF KEY$ = "1" THEN GOSUB CHANGEDNSHOW
    IF KEY$ = "2" THEN GOSUB CHANGEUPSHOW
    IF ASC(KEY$) = 157 THEN GOSUB OCTDOWN : REM LEFT KEY PRESSED
    IF ASC(KEY$) = 29 THEN GOSUB OCTUP : REM RIGHT KEY PRESSED
    IF KEY$ = "Q" THEN END
    GOTO GETKEY

CHANGEUPSHOW:
    GOSUB CHANGEUP
    GOSUB SHOW
    RETURN

CHANGEDNSHOW:
    GOSUB CHANGEDOWN
    GOSUB SHOW
    RETURN

CHANGEUP:
    INST% = INST% + 1
    IF INST% > 162 THEN INST% = 0
    FMINST 1, INST%
    RETURN

CHANGEDOWN:
    INST% = INST% - 1
    IF INST% < 0 THEN INST% = 162
    FMINST 1, INST%
    RETURN

OCTUP:
    IF OCTAVE% < 7 THEN OCTAVE% = OCTAVE% + 1
    LOCATE 28, 2
    PRINT "OCTAVE:" + STR$(OCTAVE%)
    RETURN

OCTDOWN:
    IF OCTAVE% > 0 THEN OCTAVE% = OCTAVE% - 1
    LOCATE 28, 2
    PRINT "OCTAVE:" + STR$(OCTAVE%)
    RETURN

