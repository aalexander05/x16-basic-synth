GETKEY:
    GET KEY$: IF KEY$="" GOTO GETKEY
    IF KEY$ = "A" THEN FMPLAY 1, "T150 O" + RIGHT$(STR$(OCTAVE%), LEN(STR$(OCTAVE%))-1) + " L8 C" : GOTO GETKEY
